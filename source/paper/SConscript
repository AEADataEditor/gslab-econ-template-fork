Import('*')


paper_dependencies = ['#source/paper/paper.lyx', '#output/analysis/plot.pdf']
env.Command(
	target = '#source/paper/paper.pdf',
	source = paper_dependencies,
	action = 'lyx -e pdf2 source/paper/paper.lyx'
	)

online_dependencies = ['#source/paper/paper_online.lyx', '#output/analysis/online_plot.pdf']
env.Command(
	target = '#source/paper/paper_online.pdf',
	source = online_dependencies,
	action = 'lyx -e pdf2 source/paper/paper_online.lyx'
	)

claims_dependencies = ['#source/paper/claims.lyx']
env.Command(
	target = '#source/paper/claims.pdf',
	source = claims_dependencies,
	action = 'lyx -e pdf2 source/paper/claims.lyx'
	)
